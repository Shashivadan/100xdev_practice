generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  firstname   String
  lastname    String?
  password    String
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String  
  doen        Boolean @default(false)
  description String?
}
